{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "hello-world",
    "labels": {
      "name": "hello-world",
      "role": "hello-world"
    }
  },
  "spec": {
    "volumes": [
      {
        "name": "hello-world-disk",
        "gcePersistentDisk": {
          "pdName": "hello-world-disk",
          "fsType": "ext4"
        }
      }
    ],
    "containers": [
      {
        "name": "hello-world",
        "image": "crccheck/hello-world:latest",
        "ports": [
          {
            "name": "hello-world",
            "containerPort": 8000
          }
        ],
        "volumeMounts": [
          {
            "name": "hello-world-disk",
            "mountPath": "/data/db"
          }
        ]
      }
    ]
  }
}
